<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:gravity="center"
              android:layout_marginLeft="18dp"
              android:layout_marginRight="18dp"
              android:layout_marginTop="18dp"
              android:layout_marginBottom="16dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_folink_title"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/header_folink_search_bg"
        android:background="@color/theme_color"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"

        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/header_search_img"
            android:src="@drawable/header_search"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_search_hint"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:text="@string/header_hint"
            android:textColor="@color/text_source"
            />

        </LinearLayout>

</LinearLayout>